@using Southwest_Airlines.Data.Models;
@model PaymentInfo
@{
    ViewData["Title"] = "Payment Information";
}
<head>
    <link rel="stylesheet" href="~/css/PaymentInfo/detail.css" asp-append-version="true" />
</head>

<h1>Payment Information</h1>

<form method="post" asp-controller="Fastpasses" asp-action="UpdateFastpass">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="CustomerId" value="@Model.CustomerId" />
    <div class="payment-info">
        <div class="row">
            <label asp-for="CardholderName">Full Name on Card</label>
            <input asp-for="CardholderName" />
            <span asp-validation-for="CardholderName"></span>
        </div>
        <div class="row">
            <label asp-for="PaymentMethod">Payment Method</label>
            <input asp-for="PaymentMethod" />
            <span asp-validation-for="PaymentMethod"></span>
        </div>
        <div>
            <label asp-for="CardNumber">Card Number</label>
            <input asp-for="CardNumber" />
            <span asp-validation-for="CardNumber"></span>
        </div>
        <div>
            <label asp-for="ExpiryDate">Expiration Date</label>
            <input asp-for="ExpiryDate" />
            <span asp-validation-for="ExpiryDate"></span>
        </div>
        <button class="submit-button" type="submit" value="Fastpass">Submit</button>
    </div>

</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
